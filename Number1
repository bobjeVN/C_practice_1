#include <iostream>

int main(){
    int x = 0;
    int y = 0;
    char operation;
    std::cout << "Enter first number: ";
    std::cin >> x;
    std::cout << "Enter second number: ";
    std::cin >> y;
    std::cout << "Enter operation: ";
    std::cin >> operation;

    switch (operation){
        case '-':
            std::cout << "a - b = " << x - y <<'\n';
            break;
        case '+':
            std::cout << "a + b = " << x + y << '\n';
            break;
        case '*':
            std::cout << "a * b = " << x * y << '\n';
            break;
        case '/':
            std::cout << "a / b = " << x / y << '\n';
            break;
        default:
            std::cout << "Error\n";
    }
    return 0;
}
